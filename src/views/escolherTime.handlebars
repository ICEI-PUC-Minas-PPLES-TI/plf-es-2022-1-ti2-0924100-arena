<header>
    <div class="flex-container">
        <div><img src="../img/logo.png" class="logo" alt=""></div>
        <h1 class="titulo">Times Disponíveis</h1>
        <div><button class="botao_sair">Sair</button></div>
    </div>
</header>

<main>
    <div class="container">
        <div class="row">
            {{#each times}}
            <div class="col-sm-4">
                <div class="cards">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{Nome}}</h5>
                            <p>Esporte: {{IdEsporte}} </p>
                            <p>Máximo de participantes: {{NumeroMaximo}} </p>
                            <p>Número de participantes: {{NumeroAtletas}} </p>
                            {{#with email}}
                            <p>{{email}}</p>
                            {{/with}}
                            <a href="/time/{{CodigoTime}}" ><input type="button"
                        class="btn btn-outline-danger" id="{{CodigoTime}}" value="visualizar"></a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
</main>

<footer class="rodape">
    <div class="container">
        <div class="row teste">
            <div class="col">
                <div>
                    <p class="estilo_letra">&copy Todos os direitos resevados</p>
                </div>
            </div>
            <div class="col">
                <div class="container rodape2">
                    <div class="col">
                        <a href="" class="estilo_letra remover_decoracao">Serviços</a>
                    </div>
                    <div class="col">
                        <a href="" class="estilo_letra remover_decoracao">Sobre nós</a>
                    </div>
                    <div class="col">
                        <a href="" class="estilo_letra remover_decoracao">Contato</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

