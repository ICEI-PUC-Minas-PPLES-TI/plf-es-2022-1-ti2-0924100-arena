<body>
    <header>
        <div class="flex-container">
            <div><img src="../../img/logo.png" class="logo" alt=""></div>
            <div><a href="../../frontend/Tela_inicial/index.html"><input type="button" class="botao_sair"
                        value="Sair"></a></div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-6">
                <h2><strong>Valor total a pagar: R$ 20.00</strong></h2>
            </div>
            <div class="col-sm-2">
                <a href="PagAtleta.html"><input type="submit" class="botao_sair" value="Retornar"></a>
            </div>
            <div class="col-sm-2">
                <a href="#"><input type="submit" class="botao_sair" value="Enviar"></a>
            </div>

        </div>
    </div>

    <div class="container">
        <form action="" method="post">
        <div class="row">
            <div class="col-sm-10">
                <table id="grid_loc_pag" class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Partida</th>
                            <th scope="col">Data</th>
                            <th scope="col">Locatario</th>
                            <th scope="col">Tipo da Chave Pix</th>
                            <th scope="col">pix</th>
                            <th scope="col">Valor</th>
                            <th scope="col">Comprovante</th>
                        </tr>
                    </thead>
                    {{#each dados}}
                    <tbody id="grid_loc_pag">
                        <th scope="col">{{CodigoPartida}}</th>
                            <th scope="col">{{Data}}</th>
                            <th scope="col">{{Nome}}</th>
                            <th scope="col">{{TipoChavePix}}</th>
                            <th scope="col">{{chavepix}}</th>
                            <th scope="col">{{../valoresIndividuais}}</th>
                        <th scope="col"><input type="file" name="arquivo" id="{{CodigoPartida}}" accept=".pdf,.png,.jpg"></th>
                    </tbody>
                    {{/each}}
                </table>
            </div>
        </div>
        </form>
    </div>

    <footer class="rodape">

        <div class="container">
            <div class="row teste">

                <div class="col">
                    <div>
                        <p class="estilo_letra">&copy Todos os direitos resevados</p>
                    </div>
                </div>



                <div class="col">
                    <div class="container rodape2">
                        <div class="col">
                            <a href="#" class="estilo_letra remover_decoracao">Serviços</a>
                        </div>
                        <div class="col">
                            <a href="#" class="estilo_letra remover_decoracao">Sobre nós</a>
                        </div>
                        <div class="col">
                            <a href="#" class="estilo_letra remover_decoracao">Contato</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
