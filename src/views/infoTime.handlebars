<header>
    <div class="flex-container">
        <div><img src="../../img/logo.png" class="logo" alt=""></div>
        <div><a href="../frontend/Tela_inicial/index.html"><input type="button" class="botao_sair" value="Sair"></a>
        </div>
    </div>
</header>
<main>
    <div class="container">
        {{#with time}}
        <form id="form-Atleta" method="post" action="/time/entrarTime/{{CodigoTime}}">

            <div class="form-group row">


                <div class="col-sm-6">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{Nome}}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}



            <div class="col-sm-6">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class=" row g-0">
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"> Atletas no time:</h5>

                                {{#each atletas}}
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">{{EmailAtleta}} </li>
                                </ul>
                                {{/each}}
                            </div>

                        </div>

                    </div>

                </div>

            </div>




            <div id="msg" class="col-sm-10 offset-sm-1 ">
                <!--<div class="alert alert-warning">ERROR</div>-->
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <label for="inputEmail">E-mail (*)</label>
                    <input type="email" class="form-control" name="email" id="inputEmail" required
                        placeholder="Informe o E-mail">
                </div>

                <div class="col-sm-2" id="buttons">
                    <a href="#"><input type="submit" name="entrar" class="botao_sair" value="Entrar"></a>
                </div>

            </div>



            <div class="row">

            </div>

    </div>
</main>

<footer class="rodape">

    <div class="container">
        <div class="row teste">

            <div class="col">
                <div>
                    <p class="estilo_letra">&copy Todos os direitos resevados</p>
                </div>
            </div>

            <div class="col">

                <div class="container rodape2">



                    <div class="col">
                        <a href="#" class="estilo_letra remover_decoracao">Serviços</a>
                    </div>
                    <div class="col">
                        <a href="#" class="estilo_letra remover_decoracao">Sobre nós</a>
                    </div>
                    <div class="col">
                        <a href="#" class="estilo_letra remover_decoracao">Contato</a>
                    </div>



                </div>
            </div>

        </div>
    </div>
</footer>

