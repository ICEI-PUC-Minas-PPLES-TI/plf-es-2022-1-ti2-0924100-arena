<h1>Cadastro do Locatário</h1>

<div class="container">

    <form id="form-Locatario" action="/locatario/cadastroRecebido" method="post">

        <div class="form-group row">

            <div class="col-sm-1">
                <label for="inputId">Id</label>
                <input type="text" class="form-control" id="inputId" placeholder="ID" disabled>
            </div>

            <div class="col-sm-5">
                <label for="inputNome">Nome (*)</label>
                <input type="text" name="nome" class="form-control" id="inputNome" required
                    placeholder="Informe o Nome">
            </div>

            <div class="col-sm-3">
                <label for="inputData">Data de Nascimento</label>
                <input type="date" name="data" class="form-control" id="inputdata">
            </div>

            <div class="col-sm-3">
                <label for="inputContato">Contato</label>
                <input type="tel" name="contato" class="form-control" id="inputContato" required
                    placeholder="Informe o seu número">
            </div>

            <div class="col-sm-6">
                <label for="inputEmail">E-mail (*)</label>
                <input type="email" name="email" class="form-control" id="inputEmail" required
                    placeholder="Informe o E-mail">
            </div>

            <div class="col-sm-3">
                <label for="inputSenha">Senha (*)</label>
                <input type="password" name="senha" class="form-control" id="inputSenha" minlength="8" required
                    placeholder="Informe a Senha">
            </div>

            <div class="col-sm-6">
                <label for="inputChavePix">Tipo da Chave Pix (*)</label>
                <select name="chavePix" id="chavePix" class="form-control">
                    <option value="CPF/CNPJ">CPF/CNPJ</option>
                    <option value="telefone">Telefone</option>
                    <option value="email">E-mail</option>
                </select>
            </div>

            <div class="col-sm-6">
                <label for="inputPix">Chave Pix (*)</label>
                <input type="text" name="pix" class="form-control" id="inputPix" required
                    placeholder="Informe a Chave Pix">
            </div>

            <div class="col-sm-4 offset-sm-4">
                <small>(*) Campos obrigatórios</small>
            </div>
        </div>

        <div id="msg" class="col-sm-10 offset-sm-1 ">
            <!--<div class="alert alert-warning">ERROR</div>-->
        </div>

        <div class="row">
            <div class="col-sm-12" id="buttons">
                <a href="#"><input type="submit" class="botao_sair"
                        value="Cadastrar"></a>
            </div>
        </div>

</div>
