<header>
    <div class="flex-container">
        <div><img src="/img/logo.png" class="logo" alt=""></div>
        <h1 class="titulo">Partidas</h1>
        <div><button class="botao_sair">Sair</button></div>
    </div>
</header>
<main>
    <div class="partida">
        {{#each partidas}}
        <div class="card text-center">
            <div class="card-header">
                <span>{{NomeQuadra}}</span></br>
                </br>
                CEP: {{CEP}} - Número: {{Numero}}
            </div>
            <div class="card-body">
                <p><span>Jogadores: </span>{{MinimoParticipantes}}</p>
                <p><span>Preço: </span>R${{Preco}}</p>
                <a href="/partida/entrar/lobby/{{../codigotime}}/{{../esporte}}/{{CodigoPartida}}/{{../id}}"
                    class="btn btn-info">Entrar</a>
            </div>
            <div class="card-footer">
                {{Data}} {{HorarioInicio}} - {{HorarioFim}}
            </div>
        </div>
        {{/each}}
    </div>
</main>
<footer class="rodape">
    <div class="container">
        <div class="row teste">
            <div class="col">
                <div>
                    <p class="estilo_letra">&copy Todos os direitos resevados</p>
                </div>
            </div>
            <div class="col">
                <div class="container rodape2">
                    <div class="col">
                        <a href="" class="estilo_letra remover_decoracao">Serviços</a>
                    </div>
                    <div class="col">
                        <a href="" class="estilo_letra remover_decoracao">Sobre nós</a>
                    </div>
                    <div class="col">
                        <a href="" class="estilo_letra remover_decoracao">Contato</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
