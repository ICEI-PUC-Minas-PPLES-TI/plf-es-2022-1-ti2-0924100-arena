<header>
    <div class="flex-container">
        <div><img src="/img/logo.png" class="logo" alt=""></div>
        <h1 class="titulo">Escolha a Quadra</h1>
        <div class="btnsair"><a href="/"><button class="botao_sair">Sair</button></a>
        </div>
    </div>
</header>
<main>
    <div class="cards">
        {{#each quadras}}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{NomeQuadra}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">Quadra: {{CodigoQuadra}}</h6>
                <p class="card-text">CEP: {{CEP}} </br>Número: {{Numero}}</p>
                <p class="card-text">Preço: {{Preco}}</p>
                <a href="/partida/lobby/{{../codesporte}}/{{../horarioi}}/{{../horariof}}/{{../data}}/{{../minimop}}/{{CodigoQuadra}}/{{Preco}}/{{../codigotime}}/{{../id}}"
                    class="card-link" id="{{CodigoQuadra}}">Agendar</a>
            </div>
        </div>
        {{/each}}
    </div>
</main>
<footer class="rodape">
    <div class="container">
        <div class="row teste">
            <div class="col">
                <div>
                    <p class="estilo_letra">&copy Todos os direitos resevados</p>
                </div>
            </div>
            <div class="col">
                <div class="container rodape2">
                    <div class="col">
                        <a href="" class="estilo_letra remover_decoracao">Serviços</a>
                    </div>
                    <div class="col">
                        <a href="" class="estilo_letra remover_decoracao">Sobre nós</a>
                    </div>
                    <div class="col">
                        <a href="" class="estilo_letra remover_decoracao">Contato</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
